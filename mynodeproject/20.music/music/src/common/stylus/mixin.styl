/*这个文件是来定义一些公用的css函数*/

//背景图片
bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)  /*min-device-pixel-ratio:是指的屏幕分辨率的比率，例如iphone6的实际中是1:2的比率，这个值就是2*/
    background-image url($url + "@3x.png")


//不换行变省略号的方法函数
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap


//扩展点击区域的方法函数
extend-click()
  position relative
  &:before
    content ''
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px

